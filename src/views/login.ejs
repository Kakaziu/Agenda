<%- include('includes/head') %>
<link rel="stylesheet" href="/css/login.css">
<%- include('includes/nav') %>

<main>
    <div class="title">
        <h1>Agenda</h1>
        <p>Cadastre seus contatos abaixo:</p>
    </div>

    <%- include('includes/messages') %>
    <div class="messages"></div>

    <div class="forms">
        <form action="/login/register" method="post" class="form-cadastro">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <h4>Cadastre-se:</h4>
            <p>E-mail:</p>
            <input type="email" name="email" class="email">
            <p class="error error-email"></p>
            <p>Senha:</p>
            <input type="password" name="senha" class="senha">
            <p class="error error-senha"></p>
            <button type="submit">Cadastrar</button>
        </form>
        <form action="/login/login" method="post" class="border-none form-login">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <h4>FaÃ§a login:</h4>
            <p>E-mail:</p>
            <input type="email" name="email" class="email">
            <p class="error error-email"></p>
            <p>Senha:</p>
            <input type="password" name="senha" class="senha">
            <p class="error error-senha"></p>
            <button type="submit">Login</button>
        </form>
    </div>
</main>
<script type="module" src="/js/login.js" defer></script>

<%- include('includes/footer') %>